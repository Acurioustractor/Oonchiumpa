# Oonchiumpa Platform Environment Configuration

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/oonchiumpa_dev"
MONGODB_URL="mongodb://localhost:27017/oonchiumpa_content"
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# File Storage
STORAGE_TYPE=local # or 's3'
AWS_S3_BUCKET=oonchiumpa-assets
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-2

# Cultural Protocols
CULTURAL_VALIDATION_ENABLED=true
ELDER_APPROVAL_REQUIRED=true
SACRED_CONTENT_PROTECTION=strict

# External APIs
NIAA_API_KEY=your-niaa-api-key
GEOCODING_API_KEY=your-geocoding-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@oonchiumpa.org
SMTP_PASS=your-smtp-password

# Development Tools
DEBUG=true
LOG_LEVEL=info

# Cultural Content Settings
DEFAULT_SENSITIVITY_LEVEL=community
AUTO_FLAG_SACRED_KEYWORDS=true
REQUIRE_COMMUNITY_APPROVAL=true